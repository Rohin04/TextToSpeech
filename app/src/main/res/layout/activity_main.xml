<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/entertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/sfproreg"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/enter_text"
        android:padding="50dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />



<Button
        android:id="@+id/dictate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:layout_marginStart="8dp"
    android:fontFamily="@string/sfproreg"

    android:layout_marginEnd="8dp"
        android:drawableTop="@drawable/speak"
        android:background="@android:color/transparent"
        android:text="@string/dictate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/urledit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entertext" />

    <EditText
        android:id="@+id/urledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/sfproreg"
android:visibility="invisible"
        android:layout_margin="@dimen/button_margin"
        android:hint="Enter URL..."
        app:layout_constraintBottom_toTopOf="@+id/browser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dictate" />

    <Button
        android:id="@+id/browser"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:text="Browse"
        android:fontFamily="@string/sfproreg"

        android:layout_marginBottom="8dp"
        android:drawableTop="@drawable/browser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dictate" />

    <Button
        android:id="@+id/scanmainbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/camera"

        android:fontFamily="@string/sfproreg"
        android:text="Scan text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/browser" />





</android.support.constraint.ConstraintLayout>